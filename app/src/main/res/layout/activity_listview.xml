<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aquamarine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/aquamarine">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Tab 1 Content -->
            <LinearLayout
                android:id="@+id/tab1_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aquamarine"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:id="@+id/tab1_1_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@color/aquamarine"
                    android:orientation="horizontal"

                    >

                    <Button
                        android:id="@+id/publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:background="@color/aquamarine"
                        android:onClick="publish"
                        android:text="发布"
                        android:textColor="@color/pink"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击即可复制"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_alignTop="@+id/publish"
                        android:background="@color/aquamarine"
                        android:text="刷新"
                        android:textColor="@color/pink"
                        android:textSize="40dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/publish"
                    android:background="@color/nu11"
                    android:onClick="copyText"
                    android:text=""
                    android:textColor="@color/palevioletred"
                    android:textSize="20dp"

                    />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignTop="@+id/publish"
                    android:background="@color/nu11"
                    android:onClick="copyText"
                    android:text=""
                    android:textColor="@color/palevioletred"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignTop="@+id/publish"
                    android:background="@color/nu11"
                    android:onClick="copyText"
                    android:text=""
                    android:textColor="@color/palevioletred"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignTop="@+id/publish"
                    android:background="@color/nu11"
                    android:onClick="copyText"
                    android:text=""
                    android:textColor="@color/palevioletred"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/b5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignTop="@+id/publish"
                    android:background="@color/nu11"
                    android:onClick="copyText"
                    android:text=""
                    android:textColor="@color/palevioletred"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/b6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignTop="@+id/publish"
                    android:background="@color/nu11"
                    android:onClick="copyText"
                    android:text=""
                    android:textColor="@color/palevioletred"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/b7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignTop="@+id/publish"
                    android:background="@color/nu11"
                    android:onClick="copyText"
                    android:text=""
                    android:textColor="@color/palevioletred"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/b8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignTop="@+id/publish"
                    android:background="@color/nu11"
                    android:onClick="copyText"
                    android:text=""
                    android:textColor="@color/palevioletred"
                    android:textSize="20dp" />

            </LinearLayout>

            <!-- Tab 2 Content -->
            <LinearLayout
                android:id="@+id/tab2_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/aliceblue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图鉴"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Tab 3 Content -->
            <LinearLayout
                android:id="@+id/tab3_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="战绩查询"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Tab 4 Content -->

            <!-- Tab 5 Content -->

        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/paleturquoise" />

    </LinearLayout>
</TabHost>
